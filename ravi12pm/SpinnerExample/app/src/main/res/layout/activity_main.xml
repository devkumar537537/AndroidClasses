<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".MainActivity">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="12dp"
    android:textSize="23sp"
    android:textColor="#000"
    android:textStyle="bold"
    android:id="@+id/spinnertextview"
    android:text="Spinner text"/>
<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinnerlayout"
    android:layout_margin="12dp"
    android:layout_below="@+id/spinnertextview"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/picktext"
        android:layout_below="@id/spinnerlayout"
        android:text="pick text"
        android:layout_margin="12dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="En ter age"
        android:layout_margin="10dp"
        android:id="@+id/ageedit"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movetoanother"
        android:layout_below="@id/picktext"
        android:text="Move"
        android:layout_margin="12dp"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmnetcontainer"
        android:layout_below="@id/movetoanother"/>
</LinearLayout>