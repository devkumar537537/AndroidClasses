<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firsttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:fontFamily="@font/asset"
        android:text="LogIn Example"
        android:textColor="#328C00"
        android:textSize="23sp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_below="@+id/firsttextview"
    android:orientation="horizontal"
    android:weightSum="20"
    android:id="@+id/linearlayoutemail">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="6"
        android:text="Email"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/emailtextview"/>
    <EditText
        android:layout_width="0dp"
        android:layout_weight="14"
        android:layout_height="wrap_content"
        android:id="@+id/emailedit"
        android:hint="Enter email"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/linearlayoutemail"
        android:orientation="horizontal"
        android:weightSum="20"
        android:id="@+id/linearlayoutpassword">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:text="Password"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/passwordtextview"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="14"
            android:layout_height="wrap_content"
            android:id="@+id/passwordedit"
            android:hint="Enter Password"/>

    </LinearLayout>

    <Button
        android:id="@+id/movetoanother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayoutpassword"
        android:layout_margin="20dp"

        android:text="Move to Another" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Secondclass"
        android:layout_centerVertical="true"
        android:text="Second Text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Thirdtext"
        android:layout_centerInParent="true"
        android:text="Third Text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fourtext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Fourth Text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fifttext"
       android:layout_toRightOf="@+id/Thirdtext"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="Fift Text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seventext"
   android:layout_below="@+id/Thirdtext"
       android:layout_centerHorizontal="true"
        android:text="Seven Text"
        />
</RelativeLayout>