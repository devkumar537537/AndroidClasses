    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernumber"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:text="UserNumber"/>
</LinearLayout>