<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewExample">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/sky" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="RecyclerExample"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearlayot"
    android:layout_below="@id/firstextivew"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Email"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/eittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter email"
        />
</LinearLayout>


    <TextView
        android:id="@+id/firstextivew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="23dp"
        android:text="RecyclerExample" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/imageview"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="RecyclerExampletwo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="RecyclerExamplethree"/>
</RelativeLayout>