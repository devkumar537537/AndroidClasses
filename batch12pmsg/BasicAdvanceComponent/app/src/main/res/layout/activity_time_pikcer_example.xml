<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/universfour"
        tools:context=".TimePikcerExample">
<androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
                             android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="12dp"
        app:cardCornerRadius="21dp"
        android:id="@+id/cardviw">
    <LinearLayout
            android:layout_width="match_parent"
                  android:layout_height="wrap_content"
            android:orientation="vertical">

        <TimePicker
                android:layout_width="350dp"
                android:layout_height="350dp"
            android:timePickerMode="spinner"
                android:id="@+id/timperlayout"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/timeveiw"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="10dp"
                  android:padding="10dp"
                  android:text="time will show here"/>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                                   android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/pickdatebtn">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#11935F"
                    android:padding="10dp"
                            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Click it"
                          android:layout_centerInParent="true"
                          android:textColor="#fff"
                          android:textSize="23sp"/>



            </RelativeLayout>



        </androidx.cardview.widget.CardView>
    </LinearLayout>





</androidx.cardview.widget.CardView>


</LinearLayout>