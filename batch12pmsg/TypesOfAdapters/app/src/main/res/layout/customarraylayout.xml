<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/imageviewrcycler"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/univers"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imageviewrcycler"
        android:layout_centerVertical="true"
        android:id="@+id/linealayou1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="@string/name_veiw"
            android:textSize="19sp"
            android:id="@+id/nameveiw"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberviw"
            android:textSize="19sp"

            android:text="@string/numberviw"/>

    </LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="Click it"
    android:id="@+id/clickbtnrecyler"/>
</RelativeLayout>