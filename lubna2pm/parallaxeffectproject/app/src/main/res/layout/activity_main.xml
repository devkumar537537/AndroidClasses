<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/coordinatorlayout"
    tools:context=".MainActivity">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appbarlayout"
    android:fitsSystemWindows="true"

    >
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/collapsingtoolbar"
        android:fitsSystemWindows="true"
        app:titleEnabled="false"
        app:layout_scrollFlags="scroll"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/parallx_imageview"
            android:src="@drawable/bookone"
            android:scaleType="fitXY"

            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewlayout"
            android:background="#166397"
            android:alpha="0.3"
            />


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:id="@+id/home_toolbar"

            app:title="Parallax Tab"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            >


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout"
        android:layout_gravity="bottom"
        app:tabIndicatorColor="#fff"
        app:tabTextColor="#A80E0E"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#28C60C"/>




</com.google.android.material.appbar.AppBarLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="20"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:id="@+id/viewpage"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:text="Open Botto sheet"
            android:id="@+id/openbtoomsheet"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>