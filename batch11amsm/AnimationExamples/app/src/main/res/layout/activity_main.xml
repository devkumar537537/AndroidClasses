<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ImageView
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:id="@+id/imageview"
    android:src="@drawable/cartwo"
    android:scaleType="fitXY"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Rotate"
    android:id="@+id/rotatianimation"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageviewtwo"
        android:src="@drawable/cartwo"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="FadIn"
        android:id="@+id/rotatianimationtwo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sequesttext"

        android:text="SequenceText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sequesncbtn"
        android:layout_gravity="center_horizontal"
        android:text="Sequenc"/>
</LinearLayout>